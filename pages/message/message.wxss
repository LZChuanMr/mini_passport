/* pages/message/message.wxss */
page{
  height: 100%;

}
swiper{
  height: 100%;
}
.inp_val{
  width: 80%;
  height: 60rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  border-radius:5rpx; 
  color: #2b2727;
  background: white;
  margin-top: 10rpx;
  margin-left: 2%;
}
.inp_val_but{
  width: 14%;
  height: 60rpx;
  margin-top: 10rpx;
  font-size: 26rpx;
  padding: 0;
}
/*切换栏*/
.swiper-tab {
line-height: 45px;
background: #2b2727;
color:#fff ;
display: flex;
flex-wrap: wrap;
position: fixed;
left: 0;
right: 0;
top: 0;
z-index: 2;
flex-direction: row;
justify-content: center;
align-items: center;
border-bottom:1px solid #b3b3b3;
}

van-search{
width: 100%;

}
.swiper-tab-list {
margin: 0 25px;
box-sizing: border-box;
overflow: hidden
}
 
.on {
border-bottom:2px solid #fff;
color: #f5f5f5;
}
/*订单列表*/
.swiper-box{
  padding: 100px 10rpx 0 10rpx;
  box-sizing: border-box;
  height: 100%;
}
.orderListTitle {
overflow: hidden;
box-sizing: border-box;
}

.dd_con1{
  font-size: 14px;
  padding: 10rpx;
  border: 1px solid #b3b3b3;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  border-radius:15rpx; 

  line-height: 30px;
  overflow: hidden;
}
.dd_con1 view{
  font-size: 25rpx;
}
.dd_con2{
  font-size: 14px;
  padding: 10rpx;
  box-sizing: border-box; 
  overflow: hidden;
}
.btw{
  display: flex;
  flex-wrap: wrap;
  justify-content:space-around;  
}
.xq{
  width: 100%;
  height: 130rpx;
  border: 1px solid #b3b3b3;
  border-radius:15rpx; 
  margin-bottom: 5rpx;
}
.element{
  float: left;
  padding-left:10rpx; 
  box-sizing: border-box;
}
.element:first-child{
  width: 50%;
}
.zwsj{
  text-align: center;
  font-size: 30rpx;
  color: #b3b3b3;
  margin-top: 50rpx;
}